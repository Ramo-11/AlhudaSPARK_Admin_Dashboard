<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Food Vendors - Admin Dashboard</title>
        <link rel="stylesheet" href="/css/dashboard.css" />
    </head>
    <body>
        <div class="dashboard-container">
            <!-- Sidebar Navigation -->
            <nav class="sidebar">
                <div class="sidebar-header">
                    <h2>Admin Dashboard</h2>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link">
                            <span class="nav-icon">üìä</span>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/vendors" class="nav-link">
                            <span class="nav-icon">üè™</span>
                            Vendors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/food-vendors" class="nav-link active">
                            <span class="nav-icon">üçî</span>
                            Food Vendors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/teams" class="nav-link">
                            <span class="nav-icon">üë•</span>
                            Teams
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/sponsors" class="nav-link">
                            <span class="nav-icon">ü§ù</span>
                            Sponsors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/players" class="nav-link">
                            <span class="nav-icon">üèÄ</span>
                            Practice Players
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/bounce-house" class="nav-link">
                            <span class="nav-icon">üéà</span>
                            Bounce House
                        </a>
                    </li>
                    <li
                        class="nav-item"
                        style="
                            margin-top: auto;
                            border-top: 1px solid rgba(255, 255, 255, 0.1);
                            padding-top: 1rem;
                        "
                    >
                        <a href="/logout" class="nav-link">
                            <span class="nav-icon">üö™</span>
                            Logout
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="main-content">
                <div class="content-header">
                    <h1>Food Vendors Management</h1>
                    <p>Manage food vendors for the event</p>
                </div>

                <!-- Filters and Actions -->
                <div class="filters-section">
                    <div class="filters-row">
                        <div class="filter-group">
                            <select id="payment-filter" class="form-select">
                                <option value="">All Payment Status</option>
                                <option value="pending">Pending</option>
                                <option value="processing">Processing</option>
                                <option value="completed">Completed</option>
                                <option value="failed">Failed</option>
                                <option value="cancelled">Cancelled</option>
                            </select>
                        </div>
                        <div class="action-group">
                            <button id="export-btn" class="btn btn-secondary">Export</button>
                        </div>
                    </div>
                </div>

                <!-- Food Vendors Table -->
                <div class="table-container">
                    <div class="table-header">
                        <h2>Food Vendors List</h2>
                        <div class="search-box">
                            <input
                                type="text"
                                id="search-input"
                                placeholder="Search food vendors..."
                                class="form-input"
                            />
                        </div>
                    </div>

                    <table class="data-table" id="food-vendors-table">
                        <thead>
                            <tr>
                                <th>Created At</th>
                                <th>Business Name</th>
                                <th>Contact Person</th>
                                <th>Email</th>
                                <th>Menu Description</th>
                                <th>Payment Method</th>
                                <th>Fee</th>
                                <th>Payment Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="food-vendors-table-body">
                            <!-- Food vendor rows will be populated by JavaScript -->
                        </tbody>
                    </table>

                    <div class="table-footer">
                        <div class="pagination" id="pagination">
                            <!-- Pagination will be populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <!-- Payment Status Modal -->
        <div id="payment-modal" class="modal">
            <div class="modal-content modal-sm">
                <div class="modal-header">
                    <h2>Update Payment Status</h2>
                    <button class="close-btn" id="close-payment-modal">&times;</button>
                </div>
                <form id="payment-form" class="modal-body">
                    <p>Current Status: <strong id="current-payment-status"></strong></p>

                    <div class="form-group">
                        <label class="form-label">New Payment Status</label>
                        <select id="payment-status-select" class="form-select" required>
                            <option value="pending">Pending</option>
                            <option value="processing">Processing</option>
                            <option value="completed">Completed</option>
                            <option value="failed">Failed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Transaction ID (optional)</label>
                        <input type="text" id="transaction-id" class="form-input" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="cancel-payment-btn">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">Update Status</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Edit Food Vendor Modal (No Add functionality) -->
        <div id="food-vendor-modal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="modal-title">Edit Food Vendor</h2>
                    <button class="close-btn" id="close-modal">&times;</button>
                </div>

                <form id="food-vendor-form" class="modal-body">
                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Business Name *</label>
                            <input type="text" name="businessName" class="form-input" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Contact Person *</label>
                            <input type="text" name="contactPerson" class="form-input" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Email *</label>
                            <input type="email" name="email" class="form-input" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Phone *</label>
                            <input type="tel" name="phone" class="form-input" required />
                        </div>

                        <div class="form-group full-width">
                            <label class="form-label">Address</label>
                            <input type="text" name="address" class="form-input" />
                        </div>

                        <div class="form-group full-width">
                            <label class="form-label">Website</label>
                            <input type="url" name="website" class="form-input" />
                        </div>

                        <div class="form-group full-width">
                            <label class="form-label">Menu Description</label>
                            <textarea
                                name="menuDescription"
                                class="form-textarea"
                                maxlength="500"
                            ></textarea>
                        </div>

                        <div class="form-group full-width">
                            <label class="form-label">Vendor Fee</label>
                            <input
                                type="text"
                                value="$3,000 (Fixed)"
                                class="form-input"
                                disabled
                                style="background: #f5f5f5"
                            />
                        </div>

                        <div class="form-group full-width">
                            <label class="form-label">Special Requirements</label>
                            <textarea
                                name="specialRequirements"
                                class="form-textarea"
                                maxlength="300"
                            ></textarea>
                        </div>

                        <div class="form-group full-width">
                            <label class="form-label">Comments</label>
                            <textarea name="comments" class="form-textarea"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="cancel-btn">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="delete-modal" class="modal">
            <div class="modal-content modal-sm">
                <div class="modal-header">
                    <h2>Confirm Delete</h2>
                    <button class="close-btn" id="close-delete-modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>
                        Are you sure you want to delete this food vendor? This action cannot be
                        undone.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-delete">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" id="confirm-delete">Delete</button>
                </div>
            </div>
        </div>

        <script src="/js/dashboard.js"></script>
        <script src="/js/food-vendors.js"></script>
    </body>
</html>
