<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Bounce House Registrations - Admin Dashboard</title>
        <link rel="stylesheet" href="/css/dashboard.css" />
    </head>
    <body>
        <div class="dashboard-container">
            <!-- Sidebar Navigation -->
            <nav class="sidebar">
                <div class="sidebar-header">
                    <h2>Admin Dashboard</h2>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link">
                            <span class="nav-icon">üìä</span>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/vendors" class="nav-link">
                            <span class="nav-icon">üè™</span>
                            Vendors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/food-vendors" class="nav-link">
                            <span class="nav-icon">üçî</span>
                            Food Vendors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/teams" class="nav-link">
                            <span class="nav-icon">üë•</span>
                            Teams
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/sponsors" class="nav-link">
                            <span class="nav-icon">ü§ù</span>
                            Sponsors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/players" class="nav-link">
                            <span class="nav-icon">üèÄ</span>
                            Practice Players
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/bounce-house" class="nav-link active">
                            <span class="nav-icon">üéà</span>
                            Bounce House
                        </a>
                    </li>
                    <li
                        class="nav-item"
                        style="
                            margin-top: auto;
                            border-top: 1px solid rgba(255, 255, 255, 0.1);
                            padding-top: 1rem;
                        "
                    >
                        <a href="/logout" class="nav-link">
                            <span class="nav-icon">üö™</span>
                            Logout
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="main-content">
                <div class="content-header">
                    <h1>Bounce House Registrations</h1>
                    <p>Manage bounce house waiver registrations</p>
                </div>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon">üìù</div>
                        <div class="stat-info">
                            <h3 id="total-registrations">0</h3>
                            <p>Total Registrations</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">üë∂</div>
                        <div class="stat-info">
                            <h3 id="total-children">0</h3>
                            <p>Total Children</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">üë¶</div>
                        <div class="stat-info">
                            <h3 id="male-children">0</h3>
                            <p>Male Children</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon">üëß</div>
                        <div class="stat-info">
                            <h3 id="female-children">0</h3>
                            <p>Female Children</p>
                        </div>
                    </div>
                </div>

                <!-- Filters and Actions -->
                <div class="filters-section">
                    <div class="filters-row">
                        <div class="filter-group">
                            <select id="status-filter" class="form-select">
                                <option value="">All Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="action-group">
                            <button id="export-btn" class="btn btn-secondary">Export</button>
                        </div>
                    </div>
                </div>

                <!-- Registrations Table -->
                <div class="table-container">
                    <div class="table-header">
                        <h2>Registrations List</h2>
                        <div class="search-box">
                            <input
                                type="text"
                                id="search-input"
                                placeholder="Search registrations..."
                                class="form-input"
                            />
                        </div>
                    </div>

                    <table class="data-table" id="registrations-table">
                        <thead>
                            <tr>
                                <th>Registration Date</th>
                                <th>Registration ID</th>
                                <th>Parent Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Children</th>
                                <th>Signature Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="registrations-table-body">
                            <!-- Registration rows will be populated by JavaScript -->
                        </tbody>
                    </table>

                    <div class="table-footer">
                        <div class="pagination" id="pagination">
                            <!-- Pagination will be populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <!-- View Details Modal -->
        <div id="details-modal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Registration Details</h2>
                    <button class="close-btn" id="close-details-modal">&times;</button>
                </div>
                <div class="modal-body" id="details-content">
                    <!-- Details will be populated by JavaScript -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="close-details-btn">
                        Close
                    </button>
                </div>
            </div>
        </div>

        <!-- Edit Notes Modal -->
        <div id="edit-modal" class="modal">
            <div class="modal-content modal-sm">
                <div class="modal-header">
                    <h2>Edit Registration</h2>
                    <button class="close-btn" id="close-edit-modal">&times;</button>
                </div>
                <form id="edit-form" class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Admin Notes</label>
                        <textarea
                            id="edit-notes"
                            class="form-textarea"
                            rows="4"
                            placeholder="Add notes about this registration..."
                        ></textarea>
                    </div>
                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="edit-is-active" checked />
                            Active Registration
                        </label>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="cancel-edit-btn">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="delete-modal" class="modal">
            <div class="modal-content modal-sm">
                <div class="modal-header">
                    <h2>Confirm Delete</h2>
                    <button class="close-btn" id="close-delete-modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>
                        Are you sure you want to delete this registration? This action cannot be
                        undone.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-delete">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" id="confirm-delete">Delete</button>
                </div>
            </div>
        </div>

        <script src="/js/dashboard.js"></script>
        <script src="/js/bounce-house.js"></script>
    </body>
</html>
