<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Teams - Admin Dashboard</title>
        <link rel="stylesheet" href="/css/dashboard.css" />
    </head>
    <body>
        <div class="dashboard-container">
            <!-- Sidebar Navigation -->
            <nav class="sidebar">
                <div class="sidebar-header">
                    <h2>Admin Dashboard</h2>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link">
                            <span class="nav-icon">üìä</span>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/vendors" class="nav-link">
                            <span class="nav-icon">üè™</span>
                            Vendors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/food-vendors" class="nav-link">
                            <span class="nav-icon">üçî</span>
                            Food Vendors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/teams" class="nav-link active">
                            <span class="nav-icon">üë•</span>
                            Teams
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/sponsors" class="nav-link">
                            <span class="nav-icon">ü§ù</span>
                            Sponsors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/players" class="nav-link">
                            <span class="nav-icon">üèÄ</span>
                            Practice Players
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="main-content">
                <div class="content-header">
                    <h1>Teams Management</h1>
                    <p>Manage team registrations and tournament assignments</p>
                </div>

                <!-- Filters and Actions -->
                <div class="filters-section">
                    <div class="filters-row">
                        <div class="filter-group">
                            <select id="category-filter" class="form-select">
                                <option value="">All Categories</option>
                                <option value="boys_elem_1_3">Boys Elementary (1-3rd)</option>
                                <option value="boys_elem_4_5">Boys Elementary (4-5th)</option>
                                <option value="girls_elem_1_5">Girls Elementary (1-5th)</option>
                                <option value="boys_middle">Boys Middle School (6-8th)</option>
                                <option value="girls_middle">Girls Middle School (6-8th)</option>
                                <option value="boys_high_competitive">Boys High Competitive</option>
                                <option value="boys_high_recreational">
                                    Boys High Recreational
                                </option>
                                <option value="girls_high">Girls High School</option>
                                <option value="mens_open">Men‚Äôs Open/Alumni</option>
                            </select>
                        </div>

                        <div class="filter-group">
                            <select id="status-filter" class="form-select">
                                <option value="">All Status</option>
                                <option value="pending">Pending</option>
                                <option value="approved">Approved</option>
                                <option value="rejected">Rejected</option>
                                <option value="waitlisted">Waitlisted</option>
                            </select>
                        </div>
                        <div class="filter-group">
                            <select id="payment-filter" class="form-select">
                                <option value="">All Payment Status</option>
                                <option value="pending">Payment Pending</option>
                                <option value="completed">Payment Completed</option>
                                <option value="failed">Payment Failed</option>
                            </select>
                        </div>
                        <div class="action-group">
                            <button id="add-team-btn" class="btn btn-primary">+ Add Team</button>
                            <button id="export-btn" class="btn btn-secondary">Export</button>
                        </div>
                    </div>
                </div>

                <!-- Teams Table -->
                <div class="table-container">
                    <div class="table-header">
                        <h2>Teams List</h2>
                        <div class="search-box">
                            <input
                                type="text"
                                id="search-input"
                                placeholder="Search teams..."
                                class="form-input"
                            />
                        </div>
                    </div>

                    <table class="data-table" id="teams-table">
                        <thead>
                            <tr>
                                <th>Created At</th>
                                <th>Team Name</th>
                                <th>Organization</th>
                                <th>Coach</th>
                                <th>Category</th>
                                <th>Players</th>
                                <th>Registration Fee</th>
                                <th>Payment Method</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="teams-table-body">
                            <!-- Team rows will be populated by JavaScript -->
                        </tbody>
                    </table>

                    <div class="table-footer">
                        <div class="pagination" id="pagination">
                            <!-- Pagination will be populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <!-- Add/Edit Team Modal -->
        <div id="team-modal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="modal-title">Add Team</h2>
                    <button class="close-btn" id="close-modal">&times;</button>
                </div>

                <form id="team-form" class="modal-body">
                    <!-- Team Information -->
                    <h3>Team Information</h3>
                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Team Name *</label>
                            <input type="text" name="teamName" class="form-input" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Organization *</label>
                            <input type="text" name="organization" class="form-input" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">City *</label>
                            <input type="text" name="city" class="form-input" required />
                        </div>

                        <select id="category-filter" class="form-select">
                            <option value="">All Categories</option>
                            <option value="boys_elem_1_3">Boys Elementary (1-3rd)</option>
                            <option value="boys_elem_4_5">Boys Elementary (4-5th)</option>
                            <option value="girls_elem_1_5">Girls Elementary (1-5th)</option>
                            <option value="boys_middle">Boys Middle School (6-8th)</option>
                            <option value="girls_middle">Girls Middle School (6-8th)</option>
                            <option value="boys_high_competitive">Boys High Competitive</option>
                            <option value="boys_high_recreational">Boys High Recreational</option>
                            <option value="girls_high">Girls High School</option>
                            <option value="mens_open">Men‚Äôs Open/Alumni</option>
                        </select>
                    </div>

                    <!-- Coach Information -->
                    <h3 style="margin-top: 2rem">Coach Information</h3>
                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Coach Name *</label>
                            <input type="text" name="coachName" class="form-input" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Coach Email *</label>
                            <input type="email" name="coachEmail" class="form-input" required />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Coach Phone *</label>
                            <input type="tel" name="coachPhone" class="form-input" required />
                        </div>
                    </div>

                    <!-- Emergency Contact -->
                    <h3 style="margin-top: 2rem">Emergency Contact</h3>
                    <div class="form-grid">
                        <div class="form-group">
                            <label class="form-label">Contact Name *</label>
                            <input
                                type="text"
                                name="emergencyContactName"
                                class="form-input"
                                required
                            />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Contact Phone *</label>
                            <input
                                type="tel"
                                name="emergencyContactPhone"
                                class="form-input"
                                required
                            />
                        </div>

                        <div class="form-group">
                            <label class="form-label">Relationship *</label>
                            <input
                                type="text"
                                name="emergencyContactRelationship"
                                class="form-input"
                                required
                            />
                        </div>
                    </div>

                    <!-- Players Section -->
                    <div class="players-section" style="margin-top: 2rem">
                        <div
                            style="
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                                margin-bottom: 1rem;
                            "
                        >
                            <h3>Players (5-10 players required)</h3>
                            <button type="button" id="add-player-btn" class="btn btn-secondary">
                                + Add Player
                            </button>
                        </div>

                        <div id="players-container">
                            <!-- Player forms will be added here -->
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <h3 style="margin-top: 2rem">Additional Information</h3>
                    <div class="form-grid">
                        <div class="form-group full-width">
                            <label class="form-label">Special Requirements</label>
                            <textarea
                                name="specialRequirements"
                                class="form-textarea"
                                maxlength="300"
                            ></textarea>
                        </div>

                        <div class="form-group full-width">
                            <label class="form-label">Comments</label>
                            <textarea name="comments" class="form-textarea"></textarea>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="cancel-btn">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">Save Team</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Player Modal Template -->
        <template id="player-template">
            <div
                class="player-form"
                style="
                    border: 1px solid #ddd;
                    border-radius: 8px;
                    padding: 1rem;
                    margin-bottom: 1rem;
                "
            >
                <div
                    style="
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        margin-bottom: 1rem;
                    "
                >
                    <h4>Player <span class="player-number"></span></h4>
                    <button type="button" class="btn-small btn-danger remove-player-btn">
                        Remove
                    </button>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Player Name *</label>
                        <input type="text" name="playerName" class="form-input" required />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Date of Birth *</label>
                        <input type="date" name="dateOfBirth" class="form-input" required />
                    </div>

                    <div class="form-group">
                        <label class="form-label"
                            >ID Photo
                            <span class="id-photo-required" style="display: none">*</span></label
                        >
                        <input
                            type="file"
                            name="idPhoto"
                            class="form-input id-photo-input"
                            accept="image/*"
                        />
                        <div class="existing-photo" style="display: none; margin-top: 0.5rem">
                            <img
                                class="photo-thumbnail"
                                src=""
                                alt="Player ID"
                                style="max-width: 100px; max-height: 100px; border-radius: 4px"
                            />
                            <button
                                type="button"
                                class="btn-small btn-secondary view-photo-btn"
                                style="margin-left: 0.5rem"
                            >
                                View Full
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <!-- Delete Confirmation Modal -->
        <div id="delete-modal" class="modal">
            <div class="modal-content modal-sm">
                <div class="modal-header">
                    <h2>Confirm Delete</h2>
                    <button class="close-btn" id="close-delete-modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this team? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-delete">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-danger" id="confirm-delete">Delete</button>
                </div>
            </div>
        </div>

        <!-- Team Status Modal -->
        <div id="status-modal" class="modal">
            <div class="modal-content modal-sm">
                <div class="modal-header">
                    <h2>Update Team Status</h2>
                    <button class="close-btn" id="close-status-modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Registration Status</label>
                        <select id="new-status" class="form-select">
                            <option value="pending">Pending</option>
                            <option value="approved">Approved</option>
                            <option value="rejected">Rejected</option>
                            <option value="waitlisted">Waitlisted</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Admin Notes</label>
                        <textarea
                            id="status-notes"
                            class="form-textarea"
                            placeholder="Optional notes about status change..."
                        ></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-status">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" id="confirm-status">
                        Update Status
                    </button>
                </div>
            </div>
        </div>

        <!-- Payment Status Modal -->
        <div id="payment-modal" class="modal">
            <div class="modal-content modal-sm">
                <div class="modal-header">
                    <h2>Update Payment Status</h2>
                    <button class="close-btn" id="close-payment-modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Payment Status</label>
                        <select id="new-payment-status" class="form-select">
                            <option value="pending">Pending</option>
                            <option value="processing">Processing</option>
                            <option value="completed">Completed</option>
                            <option value="failed">Failed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Payment Method</label>
                        <select id="payment-method" class="form-select">
                            <option value="">Select Method</option>
                            <option value="check">Check</option>
                            <option value="cash">Cash</option>
                            <option value="zelle">Zelle</option>
                            <option value="venmo">Venmo</option>
                            <option value="stripe">Stripe</option>
                            <option value="zeffy">Zeffy</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Transaction ID</label>
                        <input
                            type="text"
                            id="transaction-id"
                            class="form-input"
                            placeholder="Optional transaction reference"
                        />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-payment">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" id="confirm-payment">
                        Update Payment
                    </button>
                </div>
            </div>
        </div>

        <script src="/js/dashboard.js"></script>
        <script src="/js/teams.js"></script>
    </body>
</html>
