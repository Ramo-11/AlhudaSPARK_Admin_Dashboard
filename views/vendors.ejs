<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendors - Admin Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2>Admin Dashboard</h2>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <span class="nav-icon">üìä</span>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/vendors" class="nav-link active">
                        <span class="nav-icon">üè™</span>
                        Vendors
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/food-vendors" class="nav-link">
                        <span class="nav-icon">üçî</span>
                        Food Vendors
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/teams" class="nav-link">
                        <span class="nav-icon">üë•</span>
                        Teams
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/sponsors" class="nav-link">
                        <span class="nav-icon">ü§ù</span>
                        Sponsors
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/players" class="nav-link active">
                        <span class="nav-icon">üèÄ</span>
                        Practice Players
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <div class="content-header">
                <h1>Vendors Management</h1>
                <p>Manage booth vendors and their bookings</p>
            </div>

            <!-- Filters and Actions -->
            <div class="filters-section">
                <div class="filters-row">
                    <div class="filter-group">
                        <select id="type-filter" class="form-select">
                            <option value="">All Types</option>
                            <option value="food">Food & Beverages</option>
                            <option value="clothing">Clothing & Apparel</option>
                            <option value="accessories">Accessories</option>
                            <option value="books">Books & Education</option>
                            <option value="toys">Toys & Games</option>
                            <option value="sports">Sports & Fitness</option>
                            <option value="services">Services</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <select id="payment-filter" class="form-select">
                            <option value="">All Payment Status</option>
                            <option value="pending">Pending</option>
                            <option value="processing">Processing</option>
                            <option value="completed">Completed</option>
                            <option value="failed">Failed</option>
                            <option value="cancelled">Cancelled</option>
                            <option value="rejected">Rejected</option>
                        </select>
                    </div>
                    <div class="filter-group">
                        <select id="location-filter" class="form-select">
                            <option value="">All Locations</option>
                            <option value="back">Back Area</option>
                            <option value="central">Central Aisle</option>
                            <option value="side_corner">Side Corner</option>
                            <option value="front_corner">Front Corner</option>
                        </select>
                    </div>
                    <div class="action-group">
                        <button id="add-vendor-btn" class="btn btn-primary">+ Add Vendor</button>
                        <button id="export-btn" class="btn btn-secondary">Export</button>
                    </div>
                </div>
            </div>

            <!-- Vendors Table -->
            <div class="table-container">
                <div class="table-header">
                    <h2>Vendors List</h2>
                    <div class="search-box">
                        <input type="text" id="search-input" placeholder="Search vendors..." class="form-input">
                    </div>
                </div>
                
                <table class="data-table" id="vendors-table">
                    <thead>
                        <tr>
                            <th>Vendor ID</th>
                            <th>Business Name</th>
                            <th>Contact Person</th>
                            <th>Email</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Payment Method</th>
                            <th>Selected Booths</th>
                            <th>Total Price</th>
                            <th>Payment Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="vendors-table-body">
                        <!-- Vendor rows will be populated by JavaScript -->
                    </tbody>
                </table>
                
                <div class="table-footer">
                    <div class="pagination" id="pagination">
                        <!-- Pagination will be populated by JavaScript -->
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Payment Status Modal -->
    <div id="payment-modal" class="modal">
        <div class="modal-content modal-sm">
            <div class="modal-header">
                <h2>Update Payment Status</h2>
                <button class="close-btn" id="close-payment-modal">&times;</button>
            </div>
            <form id="payment-form" class="modal-body">
                <p>Current Status: <strong id="current-payment-status"></strong></p>
                
                <div class="form-group">
                    <label class="form-label">New Payment Status</label>
                    <select id="payment-status-select" class="form-select" required>
                        <option value="pending">Pending</option>
                        <option value="processing">Processing</option>
                        <option value="completed">Completed</option>
                        <option value="failed">Failed</option>
                        <option value="cancelled">Cancelled</option>
                        <option value="rejected">Rejected</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Transaction ID (optional)</label>
                    <input type="text" id="transaction-id" class="form-input">
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-payment-btn">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Status</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Add/Edit Vendor Modal -->
    <div id="vendor-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modal-title">Add Vendor</h2>
                <button class="close-btn" id="close-modal">&times;</button>
            </div>
            
            <form id="vendor-form" class="modal-body">
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Business Name *</label>
                        <input type="text" name="businessName" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Contact Person *</label>
                        <input type="text" name="contactPerson" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Email *</label>
                        <input type="email" name="email" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Phone *</label>
                        <input type="tel" name="phone" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Vendor Type *</label>
                        <select name="vendorType" class="form-select" required>
                            <option value="">Select Type</option>
                            <option value="food">Food & Beverages</option>
                            <option value="clothing">Clothing & Apparel</option>
                            <option value="accessories">Accessories & Jewelry</option>
                            <option value="books">Books & Educational</option>
                            <option value="crafts">Arts & Crafts</option>
                            <option value="services">Services</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Payment Method</label>
                        <select name="paymentMethod" class="form-select">
                            <option value="zelle">Zelle</option>
                            <option value="stripe">Credit/Debit Card</option>
                        </select>
                    </div>
                    
                    <div class="form-group full-width">
                        <label class="form-label">Address</label>
                        <input type="text" name="address" class="form-input">
                    </div>
                    
                    <div class="form-group full-width">
                        <label class="form-label">Website</label>
                        <input type="url" name="website" class="form-input">
                    </div>

                    <div class="form-group">
                        <label class="form-label">Company Logo</label>
                        <input type="file" name="logo" class="form-input" accept="image/*">
                        <small class="form-help">Upload company logo (optional)</small>
                        <div id="current-logo" style="display: none; margin-top: 0.5rem;">
                            <img id="logo-thumbnail" src="" alt="Current Logo" style="max-width: 100px; max-height: 100px; border-radius: 4px;">
                            <button type="button" class="btn-small btn-secondary" id="view-logo-btn" style="margin-left: 0.5rem;">View Full</button>
                        </div>
                    </div>
                    
                    <div class="form-group full-width">
                        <label class="form-label">Business Description *</label>
                        <textarea name="businessDescription" class="form-textarea" maxlength="500" required></textarea>
                    </div>
                    
                    <div class="form-group full-width">
                        <label class="form-label">Booth Selection *</label>
                        <div class="booth-selection">
                            <div class="booth-section">
                                <h4>Premium Booths ($1000 each)</h4>
                                <div class="booth-grid">
                                    <!-- Premium booths P100-P115 -->
                                    <label class="booth-option"><input type="checkbox" name="booths" value="P100"> P100</label>
                                    <label class="booth-option"><input type="checkbox" name="booths" value="P105"> P105</label>
                                    <label class="booth-option"><input type="checkbox" name="booths" value="P110"> P110</label>
                                    <label class="booth-option"><input type="checkbox" name="booths" value="P115"> P115</label>
                                </div>
                            </div>
                            
                            <div class="booth-section">
                                <h4>Standard Booths ($500 each)</h4>
                                <div class="booth-grid">
                                    <!-- Standard booths S100-S120 -->
                                    <label class="booth-option"><input type="checkbox" name="booths" value="S100"> S100</label>
                                    <label class="booth-option"><input type="checkbox" name="booths" value="S105"> S105</label>
                                    <label class="booth-option"><input type="checkbox" name="booths" value="S110"> S110</label>
                                    <label class="booth-option"><input type="checkbox" name="booths" value="S115"> S115</label>
                                    <label class="booth-option"><input type="checkbox" name="booths" value="S120"> S120</label>
                                </div>
                            </div>
                        </div>
                        <div class="total-price-display">
                            <strong>Total Price: $<span id="total-price">0</span></strong>
                        </div>
                    </div>
                    
                    <div class="form-group full-width">
                        <label class="form-label">Special Requirements</label>
                        <textarea name="specialRequirements" class="form-textarea" maxlength="300"></textarea>
                    </div>
                    
                    <div class="form-group full-width">
                        <label class="form-label">Comments</label>
                        <textarea name="comments" class="form-textarea"></textarea>
                    </div>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-btn">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Vendor</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="delete-modal" class="modal">
        <div class="modal-content modal-sm">
            <div class="modal-header">
                <h2>Confirm Delete</h2>
                <button class="close-btn" id="close-delete-modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this vendor? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancel-delete">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirm-delete">Delete</button>
            </div>
        </div>
    </div>

    <script src="/js/dashboard.js"></script>
    <script src="/js/vendors.js"></script>
</body>
</html>